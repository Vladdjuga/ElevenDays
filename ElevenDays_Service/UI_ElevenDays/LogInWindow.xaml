<Window x:Class="UI_ElevenDays.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UI_ElevenDays"
        mc:Ignorable="d"
        Title="Eleven Days" Height="450" Width="800" Icon="icon.jpg">
    <StackPanel Margin="100">
        <DockPanel>
            <Label Content="Email:"/>
            <TextBox x:Name="tbEmail"/>
        </DockPanel>
        <DockPanel Margin="0,30">
            <Label Content="Password:"/>
            <PasswordBox x:Name="tbPassword"/>
        </DockPanel>
        <DockPanel LastChildFill="False">
            <Button Content="Log In" DockPanel.Dock="Top" Click="Button_Click_1"/>
            <Button Content="Register" DockPanel.Dock="Top" Click="Button_Click"/>
        </DockPanel>
    </StackPanel>
</Window>
