<Window x:Class="UI_ElevenDays.WindowSeachMultyPl"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UI_ElevenDays"
        mc:Ignorable="d"
        Title="WindowSeachMultyPl" Height="450" Width="800">
    <Grid Background="Black">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="257*"/>
            <ColumnDefinition Width="139*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="5*"/>
        </Grid.RowDefinitions>
<Label Content="Select Server" FontSize="40" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" Grid.ColumnSpan="2"></Label>
        <ListBox Grid.Row="1" Grid.Column="0" Grid.RowSpan="2" Background="LightGray" Margin="10"></ListBox>
        <Button Grid.Column="1" Grid.Row="1">Refresh</Button>
        <Button Grid.Column="1" Grid.Row="2">Select</Button>
    </Grid>
</Window>
